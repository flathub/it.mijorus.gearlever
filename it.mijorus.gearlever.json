{
    "app-id": "it.mijorus.gearlever",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gearlever",
    "finish-args": [
       "--share=ipc",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--device=dri",
        "--filesystem=home:rw",
        "--talk-name=org.freedesktop.Flatpak"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        "./python3-requirements.json",
        {
            "name": "p7zip",
            "no-autogen": true,
            "make-args": [
                "7z"
            ],
            "cleanup": [
                "/man",
                "/share"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/p7zip-project/p7zip/archive/v17.05.tar.gz",
                    "sha256": "d2788f892571058c08d27095c22154579dfefb807ebe357d145ab2ddddefb1a6"
                },
                {
                    "type": "shell",
                    "commands": [
                        "sed -i 's|/usr/local|/app|g' makefile.common"
                    ]
                }
            ]
        },
        {
            "name": "gearlever",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/mijorus/gearlever.git",
                    "commit": "ee462273941c1c8b769ce3fdf5a4c43b90d8dd5e"
                }
            ]
        }
    ]
}  
